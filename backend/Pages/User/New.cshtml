@*// model.user.New.HTML....................................*@

@page
@model backend.Pages.User.NewModel
@{
    <title>New User</title>
}

<br />
<h2 class="text-info">Creat New User</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            @* for name *@
            <div class="col-3">
                <label asp-for="User.UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.UserName" class="form-control" />
                <br />
            </div>
            <div class="col-3">
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>

            @* for Email *@
            <div class="col-3">
                <label asp-for="User.UserEmail"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.UserEmail" class="form-control" />
                <br />
            </div>
            <div class="col-3">
                <span asp-validation-for="User.UserEmail" class="text-danger"></span>
            </div>


            @* for tel *@
            <div class="col-3">
                <label asp-for="User.UserTel"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.UserTel" class="form-control" />
                <br />
            </div>
            <div class="col-3">
                <span asp-validation-for="User.UserTel" class="text-danger"></span>
            </div>

            @* for admin *@
            <div class="col-3">
                <label asp-for="User.Admin"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Admin" class="form-control" type="checkbox" />
                <br />
            </div>
            <div class="col-3">
                <span asp-validation-for="User.Admin" class="text-danger"></span>
            </div>

            @* for password *@
            <div class="col-3">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Password" class="form-control" type="password" />
                <br />
            </div>
            <div class="col-3">
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To Users List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
