@*// model.user.index.HTML....................................*@

@page
@model backend.Pages.User.IndexModel
@{
    <title>User List</title>
}
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Users List</h2>
    </div>
    <div class="col-3">
        <a asp-page="New" class="btn btn-info form-control text-white">Create New User</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Users.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Users.FirstOrDefault().UserName"></label>
                        </th>
                        <th>
                            @*Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Users.FirstOrDefault().UserEmail"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().UserTel"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().Admin"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().Password"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.UserEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.UserTel)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Admin)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Password)
                            </td>

                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.UserId" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm text-white">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.UserId" class="btn btn-success btn-sm text-white">Edit / View</a>
                                <a asp-page="" asp-route-id="@item.UserId" class="btn btn-success btn-sm text-white">workshops</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No Users available</p>
            }
        </form>
    </div>
</div>
